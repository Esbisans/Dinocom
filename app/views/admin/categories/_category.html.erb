<div id="<%= dom_id category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= category.description %>
  </p>

  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <%= category.image.present? ? image_tag(category.image) : image_tag("https://via.placeholder.com/50")%>
  </div>

</div>
