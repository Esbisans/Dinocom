<section class="grid grid-cols-1 md:grid-cols-2 gap-y-8 mt-8 md:gap-x-4">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <% image_url = category.image.present? ? url_for(category.image) : 'http://via.placeholder.com/512' %>
      <div class="w-full h-64 rounded-md overflow-hidden bg-cover bg-center"
           style="background-image: url(<%= image_url %>)">
        <div class="bg-gray-900 bg-opacity-50 flex items-center h-full">
          <div class="px-10 max-w-xl">
            <h2 class="text-3xl text-white font-semibold"><%= category.name %></h2>
            <p class="mt-2 text-gray-400"><%=category.description%></p>
            <button class="flex items-center mt-4 text-white text-sm uppercase font-medium rounded hover:underline focus:outline-none">
              <span class='mr-2'>Shop Now</span>
                <%= icon 'fa-solid', 'arrow-right' %>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</section>



