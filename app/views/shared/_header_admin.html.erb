<aside class="hidden md:flex flex-col w-64 h-screen px-4 py-8 sticky top-0 bg-white border-r rtl:border-r-0 rtl:border-l dark:bg-gray-900 dark:border-gray-700">
    <a href="#" class="flex justify-center items-center">
        <%= image_tag 'logo.png', class: "w-auto h-16 sm:h-20" %>
    </a>
    <h2 class="mx-4 font-medium">Dinocom Admin</h2>

    <div class="flex flex-col justify-between flex-1 mt-6">
        <nav>
            <%= link_to admin_path, class: "flex items-center px-4 py-2 #{current_page?(admin_path) ? 'bg-blue-600 text-white pointer-events-none' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700'} transition-colors duration-300 transform rounded-md dark:text-gray-400" do%>
                <%= icon('fa-solid', 'gauge-high', class:'w-5 h-5')%> 
                <span class="mx-4 font-medium"><%= t('header_admin.dashboard')%></span>
            <%end%>

            <%= link_to admin_products_path, class: "flex items-center px-4 py-2 mt-5 #{current_page?(admin_products_path) ? 'bg-blue-600 text-white pointer-events-none' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700'} transition-colors duration-300 transform rounded-md dark:text-gray-400" do %>
                <%= icon('fa-solid', 'cart-shopping', class: 'w-5 h-5') %> 
                <span class="mx-4 font-medium">Products</span>
            <% end %>

            <%= link_to admin_categories_path, class: "flex items-center px-4 py-2 mt-5 #{current_page?(admin_categories_path) ? 'bg-blue-600 text-white pointer-events-none' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700'} transition-colors duration-300 transform rounded-md dark:text-gray-400" do%>
                <%= icon('fa-solid', 'list', class:'w-5 h-5')%> 
                <span class="mx-4 font-medium"><%= t('header_admin.categories')%></span>
            <%end%>

            <%= link_to admin_orders_path, class: "flex items-center px-4 py-2 mt-5 #{current_page?(admin_orders_path) ? 'bg-blue-600 text-white pointer-events-none' : 'text-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700'} transition-colors duration-300 transform rounded-md dark:text-gray-400" do%>
                <%= icon('fa-solid', 'truck-fast', class:'w-5 h-5')%> 
                <span class="mx-4 font-medium">Orders</span>
            <%end%>

            <hr class="my-6 border-gray-200 dark:border-gray-600" />

            <%= link_to destroy_admin_session_path, data: {"turbo-method": :delete, "turbo-confirm": "Are you sure you want to sign out"}, class: "flex items-center px-4 py-2 mt-5 text-gray-600 transition-colors duration-300 transform rounded-md dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700" do%>
                <%= icon('fa-solid', 'sign-out', class:'w-5 h-5')%> 
                <span class="mx-4 font-medium">Logout</span>
            <%end%>
        </nav>
    </div>
</aside>

<aside class="flex md:hidden flex-col items-center w-16 h-screen py-8 sticky top-0 bg-white border-r rtl:border-l rtl:border-r-0 dark:bg-gray-900 dark:border-gray-700">
